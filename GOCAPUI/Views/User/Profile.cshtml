        }

    .upload-button {
        width: 20%;
        padding: 10px 20px;
        margin-right: 50px;
        background-color: #ff3b3b;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        text-align: center;
    }

        .upload-button:hover {
            background-color: #ff6666;
        }

    /* Adjustments to align profile and "Các tài khoản đã follow" */
    .menu-item {
        padding: 15px 0;
        font-size: 18px;
        cursor: pointer;
        display: flex;
