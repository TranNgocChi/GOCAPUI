@{
    Layout = "_LayoutAdmin";
}
<div class="row">
    
        <div class="col-lg-6 ">
            <div class="card">
                <div class="card-body">
                    <div class="stat-widget-five">
                        <div class="stat-icon dib flat-color-3">
                            <i class="pe-7s-browser"></i>
                        </div>
                        <div class="stat-content">
                            <div class="text-left dib">
                                <!-- Replace the hard-coded number with a dynamic value -->
                                <div class="stat-text"><span class="count">@ViewBag.PostCount</span> </div>
                                <div class="stat-heading">Posts</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  

    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="stat-widget-five">
                    <div class="stat-icon dib flat-color-4">
                        <i class="pe-7s-users"></i>
                    </div>
                    <div class="stat-content">
                        <div class="text-left dib">
                            <div class="stat-text"><span class="count">@ViewBag.UserCount</span></div>
                            <div class="stat-heading">Clients</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>